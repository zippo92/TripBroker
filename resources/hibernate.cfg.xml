        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/myfirsthibernatedb</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">134679</property>

        <property name="hibernate.hbm2ddl.auto">update</property>
        <!-- Enable debug information -->
        <property name="show_sql">true</property>
        <mapping class="entityPackage.User"/>
        <mapping class="entityPackage.Offerta"/>
        <mapping class="entityPackage.OffertaPernotto"/>
        <mapping class="entityPackage.OffertaTrasporto"/>
